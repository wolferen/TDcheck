<%= simple_form_for @task do |f| %>
	<%= f.text_field :title, :placeholder => 'Insert task' %>
	<%= select(:task, :priority,  [['High', 0], ['Medium', 1], ['Low', 2]],
	          {:prompt => 'Select priority'})%>

	<br><br>Select Start date    <%= f.date_select :started_at %>
	<br><br>Select Deadline date <%= f.date_select :deadline %>
	<br><br><%= link_to 'Back', root_path, :class => 'btn btn-primary' %>
	<%= f.submit 'Create task', :class => 'btn btn-success' %>
<% end %>